          ZIndex="10050"
          Header="TehnoloÄ£ijas soÄ¼i"
          Visible="Visible"
        VisibleChanged="VisibleChanged">

<DialogTemplates>
<Content>
        <div class="steps-dialog-actions">
            <button type="button"
                    class="action-btn action-btn-sm"
                    @onclick="() => OnOpenStepTypes.InvokeAsync()">
                âš™ SoÄ¼u tipi
